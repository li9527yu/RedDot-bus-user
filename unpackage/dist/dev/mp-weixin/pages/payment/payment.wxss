
.payment{
	position: relative;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
}
.row {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/* height: 100upx; */
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin: 5px 0;
}
.row:active {
	opacity: 0.8;
}
.name {
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
	font-size: 18px;
	padding-left: 5px;
	padding-right: 5px;
	/* font-weight: 200; */
}
.value {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	font-size: 18px;
	padding-left:4px ;
	/* border-bottom: 1px #C0C4CC solid; */
}
.detail{
	width: 95%;
	margin: 4px auto;
	border: 1rpx #007AFF solid;
	border-radius: 10px;
}
