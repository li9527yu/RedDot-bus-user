
.orderItem{
	position: relative;
	width: 100%;
	border: 2px solid #ffffff; 
	padding: 3px;
	border-radius: 10px;
	background-color: #FFFFFF;
}
.orderInfo{
}
.Ordertitle{
	padding: 2px;
	border-bottom: 1px solid #f0f0f0;
}
.titleText{
	font-size: 14px;
	line-height:31.25px;
	font-weight: 600;
}
.orderState{
	font-size: 14px;
	line-height:31.25px;
	color: #4c4c4c;
}
.orderImg{
	width: 100%;
	height: 100%;
	margin: 0 auto;
}
._ul{
	margin: 0;
	padding-left: 20px;
}
._ul ._li{
	list-style: none;
	padding: 2.5px;
	font-size: 12px;
}
.OrderBody{
	margin-top: 4px;
}
.orderButton{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.buttonTurn{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 10px;
}
.buttonTurn button{
	font-size: 16px;
	font-weight: 300;
}
.orderIcon{
	width: 15vw;
	height: 15vw;
}
.titleIcon{
	width: 7vw;
	height: 7vw;
}
.cancel{
	margin-top: 2px;
}
.cancelOrder{
	font-size: 12px;
	font-weight: 500;
	color: #FFFFFF;
	background-color: #f50000;
	border-radius: 5px;
}
.confirmOrder{
	font-size: 12px;
	font-weight: 500;
	color: #FFFFFF;
	background-color: #ffaf0e;
	border-radius: 5px;
}
.EDconfirmOrder{
	font-size: 12px;
	font-weight: 500;
	color: #676767;
	background-color: #e3e7d9;
	border-radius: 5px;
}
.confirmDetail{
	background-color: #FFFFFF;
	border: 1px solid #F0F0F0;
	border-radius: 5px;
	padding: 5px;
	margin: 5px;
}
.confirmDetail text{
	font-size: 14px;
}
.orderRow{
	margin-top: 5px;
}
.itemTitle{
	font-weight: 500;
}

