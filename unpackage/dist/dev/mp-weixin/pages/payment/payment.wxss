	height: 8vh;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	
	display:-webkit-box;
	
	display:-webkit-flex;
	
	display:flex;
}
.confirmTo{
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
	/* width: 100%; */
	margin: 0;
	padding: 0;
	font-weight: 300;
	font-size: 18px;
	color: #FFFFFF;
	background-color: #007AFF;
